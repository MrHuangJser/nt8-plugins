<Window x:Class="NinjaTrader.NinjaScript.AddOns.GroupTrade.UI.GroupTradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Group Trade - 多账户联动下单"
        Height="700" Width="850"
        MinHeight="600" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- 深色主题样式 -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#2D2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#3F3F46"/>
        <SolidColorBrush x:Key="TextBrush" Color="#DCDCDC"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#007ACC"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>

        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555555"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505055"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#C62828"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox 样式 -->
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- ComboBox 样式 -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- CheckBox 样式 -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="Margin" Value="0,3"/>
        </Style>

        <!-- DataGrid 样式 -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="RowBackground" Value="#2D2D30"/>
            <Setter Property="AlternatingRowBackground" Value="#333337"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3F3F46"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#252526" CornerRadius="5" Padding="15,10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Group Trade" FontSize="20" FontWeight="Bold" Foreground="#DCDCDC"/>
                    <TextBlock Text="v1.0" FontSize="12" Foreground="#808080" VerticalAlignment="Bottom" Margin="10,0,0,2"/>
                    <Border x:Name="StatusIndicator" Width="12" Height="12" CornerRadius="6"
                            Background="#4CAF50" Margin="20,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="已停止" Foreground="#808080" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="已复制: " Foreground="#808080" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CopiedCountText" Text="0" Foreground="#DCDCDC" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" 单" Foreground="#808080" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="成功率: " Foreground="#808080" VerticalAlignment="Center"/>
                    <TextBlock x:Name="SuccessRateText" Text="0%" Foreground="#4CAF50" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Leader 账户配置 -->
        <GroupBox Grid.Row="1" Header="Leader 账户 (主账户)" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="账户:" Foreground="#DCDCDC" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="LeaderAccountCombo" Grid.Column="1"
                          SelectionChanged="LeaderAccountCombo_SelectionChanged"/>
                <Button Grid.Column="2" Content="刷新" Style="{StaticResource SecondaryButton}"
                        Margin="10,0,0,0" Click="RefreshAccounts_Click"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="净值: " Foreground="#808080" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LeaderEquityText" Text="$0.00" Foreground="#DCDCDC" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="持仓: " Foreground="#808080" VerticalAlignment="Center"/>
                    <TextBlock x:Name="LeaderPositionText" Text="-" Foreground="#DCDCDC" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Follower 账户列表 -->
        <GroupBox Grid.Row="2" Header="Follower 账户 (从账户)">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="FollowerGrid" Grid.Row="0"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="启用" Binding="{Binding IsEnabled}" Width="50"/>
                        <DataGridTextColumn Header="账户名" Binding="{Binding AccountName}" Width="120" IsReadOnly="True"/>
                        <DataGridComboBoxColumn Header="模式" Width="100">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                                    <sys:String>ExactQuantity</sys:String>
                                    <sys:String>EqualQuantity</sys:String>
                                    <sys:String>Ratio</sys:String>
                                    <sys:String>NetLiquidation</sys:String>
                                    <sys:String>AvailableMoney</sys:String>
                                    <sys:String>PercentageChange</sys:String>
                                    <sys:String>PreAllocation</sys:String>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                        <DataGridTextColumn Header="比例/手数" Binding="{Binding RatioDisplayValue}" Width="80" IsReadOnly="True"/>
                        <DataGridTextColumn Header="最小" Binding="{Binding MinQuantity}" Width="50"/>
                        <DataGridTextColumn Header="最大" Binding="{Binding MaxQuantity}" Width="50"/>
                        <DataGridTextColumn Header="备注" Binding="{Binding Notes}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="添加账户" Style="{StaticResource SecondaryButton}" Click="AddFollower_Click" Margin="0,0,5,0"/>
                    <Button Content="编辑" Style="{StaticResource SecondaryButton}" Click="EditFollower_Click" Margin="0,0,5,0"/>
                    <Button Content="删除" Style="{StaticResource SecondaryButton}" Click="DeleteFollower_Click" Margin="0,0,20,0"/>
                    <Button Content="导入" Style="{StaticResource SecondaryButton}" Click="ImportConfig_Click" Margin="0,0,5,0"/>
                    <Button Content="导出" Style="{StaticResource SecondaryButton}" Click="ExportConfig_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 复制选项 -->
        <GroupBox Grid.Row="3" Header="复制选项" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="复制模式:" Foreground="#808080" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ModeAllOrders" Content="All Orders" Foreground="#DCDCDC"
                                     IsChecked="True" Margin="0,0,15,0" GroupName="CopyMode"/>
                        <RadioButton x:Name="ModeMarketOnly" Content="Market Only" Foreground="#DCDCDC"
                                     GroupName="CopyMode"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox x:Name="SyncStopLoss" Content="同步止损" IsChecked="True" Margin="0,0,15,0"/>
                        <CheckBox x:Name="SyncTakeProfit" Content="同步止盈" IsChecked="True" Margin="0,0,15,0"/>
                        <CheckBox x:Name="SyncClose" Content="同步平仓" IsChecked="True"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="高级选项:" Foreground="#808080" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox x:Name="StealthMode" Content="Stealth Mode (隐身)" Margin="0,0,15,0"/>
                        <CheckBox x:Name="FollowerGuard" Content="Follower Guard (保护)" IsEnabled="False"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <CheckBox x:Name="SyncModify" Content="同步改单" IsChecked="True" Margin="0,0,15,0"/>
                        <CheckBox x:Name="SyncOCO" Content="同步OCO" IsChecked="True"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 控制按钮 -->
        <Border Grid.Row="4" Background="#252526" CornerRadius="5" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="▶ 启动复制" Style="{StaticResource PrimaryButton}"
                            Click="Start_Click" Margin="0,0,10,0" Width="120"/>
                    <Button x:Name="StopButton" Content="■ 停止" Style="{StaticResource DangerButton}"
                            Click="Stop_Click" IsEnabled="False" Width="100"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="保存配置" Style="{StaticResource SecondaryButton}"
                            Click="SaveConfig_Click" Margin="0,0,10,0"/>
                    <Button Content="重置" Style="{StaticResource SecondaryButton}"
                            Click="Reset_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
